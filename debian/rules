#!/usr/bin/make -f
export git_protocol=https
%:
	dh $@

override_dh_install:
	apt-get --assume-yes install ruby
	apt-get --assume-yes install git
	export git_protocol=https
	gem install librarian-puppet-simple --no-ri --no-rdoc 
	rm -f $(CURDIR)/debian/puppet-vpc/usr/share/hiera/hiera.yaml
	export git_protocol=https
	librarian-puppet install --puppetfile=$(CURDIR)/Puppetfile  --path=$(CURDIR)/modules
	rm -rf $(CURDIR)/modules/*/.git
	dh_install

refresh_modules:
	rm -rf modules
	librarian-puppet install --puppetfile=$(CURDIR)/Puppetfile  --path=$(CURDIR)/modules

override_dh_auto_clean:
	dh_auto_clean
